generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Inventory { 
  id                Int       @id @default(autoincrement())
  title             String    @db.VarChar(100)
  author            String    @db.VarChar(40)
  genre             Genre     
  publication_date  DateTime
  ISBN              String    @unique
}

enum Genre {
  Romance
  Mystery
  Fantasy
  SciFi
  Thrillers
  Horror
  YoungAdult
  Children
  Religious
  Inspirational
  Memoir
}